<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1">
        <TextView
            android:text="Wiek"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/wiek" />
        <TextView
            android:text="Płeć"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/gender_text" />
        <TextView
            android:text="Waga Początkowa"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/wagaPoczatkowa" />
        <TextView
            android:text="Waga aktualna"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView2" />
        <TextView
            android:text="Wzrost"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Wzrost" />

        <TextView
            android:text="BMI"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/BMI" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/level_prompt"
    />
        <Spinner
            android:id="@+id/level_spiner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/level_prompt"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ProgressBar
                android:id="@+id/CalorieBar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                style="@style/CircleProgressBar"
                android:indeterminateOnly="false"
                android:progressDrawable="@drawable/progressbar"
                android:progress="60"
                android:rotation="-90"
                android:layout_centerInParent="true"
            />
            <TextView
                android:text="2250 cal"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/calorieText" />
        </RelativeLayout>
        <Button
            android:text="Dieta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dieta_button" />
        <Button
            android:text="Plan Treningowy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button2" />

    </LinearLayout>

</LinearLayout>
